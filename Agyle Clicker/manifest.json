{
    "name": "Playvox Task Selector",
    "version": "1.0",
    "description": "Automatically selects Playvox status on Zendesk dashboard",
    "manifest_version": 3,
    "content_scripts": [
        {
          "matches": [
            "https://*.mailchimp.zendesk.com/*"
        ],
          "js": ["content.js"]
        }
      ],
    "host_permissions": [
        "https://mailchimp.zendesk.com/*"
    ],
    "icons": {
        "16":"assets/icon16.png",
        "32":"assets/icon32.png",
        "48":"assets/icon48.png",
        "128":"assets/icon128.png"
    },
    "action": {
        "default_title": "Playvox Task Selector"
    }
}